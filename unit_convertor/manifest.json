{
  "manifest_version": 3,
  "name": "Unit Converter",
  "version": "1.0",
  "description": "A simple and intuitive unit converter extension.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://cdn.jsdelivr.net;"
  }
}